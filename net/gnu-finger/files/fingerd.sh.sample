#!/bin/sh

case $1 in
start)
	if [ -x /usr/local/libexec/fingerd -a -f /usr/local/etc/fingerdir/serverhost ]; then
		/usr/local/libexec/fingerd
		echo ' gnu-fingerd'
	fi
	;;
stop)
	killall fingerd && echo -n ' gnu-fingerd'
	;;
*)
	echo "Usage: `basename $0` {start|stop}" >&2
	exit 64
	;;
esac

exit 0
