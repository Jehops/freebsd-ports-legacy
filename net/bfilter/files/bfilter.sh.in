#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: bfilter
# REQUIRE: DAEMON
#
# Add the following line to /etc/rc.conf to enable bfilter:
#
# bfilter_enable="YES"
#

bfilter_enable=${bfilter_enable-"NO"}
bfilter_flags=${bfilter_flags-"-c %%PREFIX%%/etc/bfilter"}

. %%RC_SUBR%%

load_rc_config bfilter

name=bfilter
rcvar=`set_rcvar`

command=%%PREFIX%%/bin/${name}
sig_stop=-KILL

load_rc_config ${name}
run_rc_command "$1"
