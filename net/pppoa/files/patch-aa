+#! /bin/sh
+
+prog=$(realpath $0) || exit 1
+dir=${prog%/*}
+PREFIX=${dir%/etc/rc.d}
+
+if [ ."$dir" = ."$prog" -o ."$PREFIX" = ."$dir" ]
+then
+	echo "$0: Cannot determine the PREFIX" >&2
+	exit 1
+fi
+
