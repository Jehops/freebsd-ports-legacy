# PROVIDE: socat
# REQUIRE: LOGIN
# KEYWORD: shutdown

# Add the following lines to /etc/rc.conf to enable socat:
# socat_enable="YES"
# socat_flags="<set as needed>"

. /etc/rc.subr

name="socat"
rcvar=socat_enable

command=%%PREFIX%%/bin/${name}
command_args="&"

load_rc_config $name

: ${socat_enable="NO"}

run_rc_command "$1"
