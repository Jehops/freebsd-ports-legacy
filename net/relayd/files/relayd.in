#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: relayd
# REQUIRE: LOGIN
# KEYWORD: shutdown

# Add the following lines to /etc/rc.conf to enable relayd:
# relayd_enable="YES"
# relayd_flags="<set as needed>"

. %%RC_SUBR%%

name=relayd
rcvar=${name}_enable

load_rc_config $name

: ${relayd_enable="NO"}

command="%%PREFIX%%/sbin/relayd"

run_rc_command "$1"
