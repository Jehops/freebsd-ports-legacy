#!/bin/sh

if [ -n "${PACKAGE_BUILDING}" ]; then
    exit 0
fi

PATH=/bin:/usr/bin:/sbin:/usr/sbin:${PATH}
export PATH

if [ "$2" = "PRE-INSTALL" ]; then
     if pkg_info | grep "^py-gtk-[0-9]"; then
         echo "py-gtk for GTK+ 1.x was detected."
         echo "This packages cannot coexist with py-gtk."
	 false
     fi
fi
