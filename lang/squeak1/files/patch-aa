  #									   #
+ ifeq ($(SYSTEM),                                        freebsd)
+   CC=		gcc
+   CCFLAGS:=	-O3 -fomit-frame-pointer $(PROFILE)
+   INCDIRS:=	-I/usr/X11R6/include
+   LDO=		ld -r
+   LD=		gcc
+   LDFLAGS:=	$(PROFILE)
+   LIBDIRS=	-L/usr/X11R6/lib
+   LIBS=		-lX11 -lXext -lm
+   GNU=		gnu-
+   GAWK=		awk
+ endif
+ 
  ifeq ($(SYSTEM),					linux)
    CC=		gcc
    CCFLAGS:=	-O2 -g $(PROFILE)
