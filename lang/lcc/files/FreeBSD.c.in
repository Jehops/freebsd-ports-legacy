int 
option(arg)
	char *arg;
{
	if (strcmp(arg, "-g") == 0) {}
	else if (strcmp(arg, "-p") == 0) {
		ld[8] = "/usr/lib/gcrt0.o";
		ld[14] = "-lc_p";
	} 
	else if (strcmp(arg, "-b") == 0 &&
			access(LCCDIR "bbexit.o", 4) == 0) {
		ld[11] = LCCDIR "bbexit.o";
	} else {
		return 0;
	}

	return 1;
}
