+ #ifdef	__FreeBSD__
+ static int
+ collate_range_cmp(a, b)
+ int a, b;
+ {
+ 	int r;
+ 	static char s[2][2];
+ 
+ 	if ((unsigned char)a == (unsigned char)b)
+ 		return 0;
+ 	s[0][0] = a;
+ 	s[1][0] = b;
+ 	if ((r = strcoll(s[0], s[1])) == 0)
+ 		r = (unsigned char)a - (unsigned char)b;
+ 	return r;
+ }
+ #endif
