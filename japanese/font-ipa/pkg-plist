@unexec rm -f %%LOCALFONTSDIR%%/ipag.ttf 
@unexec rm -f %%LOCALFONTSDIR%%/ipagp.ttf
@unexec rm -f %%LOCALFONTSDIR%%/ipagui.ttf
@unexec rm -f %%LOCALFONTSDIR%%/ipam.ttf 
