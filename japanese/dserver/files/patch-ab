+#ifdef HALF
+reg_jisstrnsub_(s,t,r,n,CODE)
+unsigned char *s, *t;
+int r,n;
+int CODE;
+{
+	unsigned int ss,tt;
+	if (CODE == FULL) {
+	  for(; ; s+=2,t+=2,n-=2) {
+	    ss = (*s&0x7f)<<8|*(s+1)&0x7f;
+	    tt = (*t&0x7f)<<8|*(t+1)&0x7f;
+	    if (n <= 0)  tt = 0; /* string terminate 95.2.8 by T.Motoda */
+	    
+		if(r==SHORT && (ss=='*' || ss=='?')) {
+			return 0;
+		}
+		if(r==WHOLE && (ss=='*')) {
+			return 0;
+		}
+		if(!ss || !tt) break;
+		if(r==WHOLE && (ss=='?')) {
+			continue;
+		}
+		if(ss!=tt) break;
+	  }
+	} else {
+	  for(; ; s++,t++,n--) {
+	    ss = (*s);
+	    tt = (*t);
+	    if (n <= 0)  tt = 0; /* string terminate 95.2.8 by T.Motoda */
+	    
+		if(r==SHORT && (ss=='*' || ss=='?')) {
+			return 0;
+		}
+		if(r==WHOLE && (ss=='*')) {
+			return 0;
+		}
+		if(!ss || !tt) break;
+		if(r==WHOLE && (ss=='?')) {
+			continue;
+		}
+		if(ss!=tt) break;
+	  }
+	}
+	return ss-tt;
+}
+#endif
+
 findentry_int(key,realkey,frm,env_p)
 unsigned char *key,*realkey;
 ENV *env_p;
