  Graphic& Arrowhead::operator = (Graphic& g) { return Graphic::operator=(g); }
+ Arrowhead& Arrowhead::operator = (Arrowhead& a) {
+     Graphic::operator=(a);
+ 
+     _count = 0;
+     if (_y)
+ 	delete[] _y;
+     if (_x)
+ 	delete[] _x;
+     _x = _y = nil;
+     if (! a._count)
+ 	return *this;
+ 
+     _count = a._count;
+     _x = new Coord[_count];
+     _y = new Coord[_count];
+     ::memcpy(_x, a._x, sizeof(Coord) * _count);
+     ::memcpy(_y, a._y, sizeof(Coord) * _count);
+     return *this;
+ }
  
