!   ELF_LINK="gcc -shared -Wl,-soname#"
!   ELF_LINK_CMD="\$(ELF_LINK),\$(ELFLIB_MAJOR)"
  else
!   ELF_CC="cc"
!   ELF_CFLAGS="-K pic"
!   ELF_LINK="ld -G -z text"
    ELF_LINK_CMD="\$(ELF_LINK)"
  fi
  
