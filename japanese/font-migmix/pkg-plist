%%LOCAL_FONTSDIR%%/TTF/MigMix-1M-Bold.ttf
%%LOCAL_FONTSDIR%%/TTF/MigMix-1M-Regular.ttf
%%LOCAL_FONTSDIR%%/TTF/MigMix-1P-Bold.ttf
