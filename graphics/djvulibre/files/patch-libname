@@ -46,3 +46,6 @@
 LIBDJVU_A = ${top_builddir}/libdjvu/libdjvulibre.a
-LIBDJVU_SO = ${top_builddir}/libdjvu/libdjvulibre-${PACKAGE_VERSION}.so
+LIBDJVU_SO = ${top_builddir}/libdjvu/libdjvulibre${PACKAGE_VERSION:R:R}.so.${PACKAGE_VERSION:R:E}
+.if defined(OBJFORMAT) && ${OBJFORMAT} == "aout"
+LIBDJVU_SO:= ${LIBDJVU_SO}.${PACKAGE_VERSION:E}
+.endif
 
