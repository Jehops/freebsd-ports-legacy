  CFLAGS=		-c -O 
! LFLAGS =	-O  $(X11)/lib/libXt.a $(X11)/lib/libXext.a -lX11 \
!                 -o povray
  CC =		cc
  
  OBJ	= o
--- 16,24 ----
  
  # Added for colorx addition.  You _do_ have $X11 defined by your .cshrc,
