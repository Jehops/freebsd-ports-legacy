# Created by: ijliao
# $FreeBSD$

PORTNAME=	batik
PORTVERSION=	1.7
PORTREVISION=	3
CATEGORIES=	graphics java
MASTER_SITES=	APACHE/xmlgraphics/${PORTNAME}
DISTFILES=	${PORTNAME}-src-${PORTVERSION}${EXTRACT_SUFX}

MAINTAINER=	nemysis@FreeBSD.org
COMMENT=	Java based SVG toolkit

LICENSE=	APACHE20

USE_ZIP=	yes
USE_JAVA=	1.6+
USE_ANT=	yes
ALL_TARGET=	jars all-jar
# Prevent out of memory error during build
MAKE_ENV+=	"ANT_OPTS=-Xmx512m"

WRKSRC=		${WRKDIR}/${PORTNAME}-${PORTVERSION}
INSTALL_WRKSRC=	${WRKSRC}/${PORTNAME}-${PORTVERSION}
DATADIR=	${JAVASHAREDIR}/${PORTNAME}

PORTDOCS=	*

DOCSRCDIR1=	${WRKSRC}
DOC_FILES1=	CHANGES NOTICE README

DOCSRCDIR2=	${WRKDIR}/docs/
DOCSDIR2=	${DOCSDIR}
DOC_FILES2=	*

OPTIONS_DEFINE=	DOCS

.include <bsd.port.options.mk>

.if ${PORT_OPTIONS:MDOCS}
DISTFILES+=	${PORTNAME}-docs-${PORTVERSION}${EXTRACT_SUFX}
.endif

do-install:
	(cd ${INSTALL_WRKSRC} && ${COPYTREE_SHARE} . ${STAGEDIR}${DATADIR})

.if ${PORT_OPTIONS:MDOCS}
	@${MKDIR} ${STAGEDIR}${DOCSDIR}
	${INSTALL_DATA} ${DOC_FILES1:S|^|${DOCSRCDIR1}/|} ${STAGEDIR}${DOCSDIR}
	@(cd ${WRKDIR}/docs && ${COPYTREE_SHARE} . ${STAGEDIR}${DOCSDIR2})
.endif

.include <bsd.port.mk>
