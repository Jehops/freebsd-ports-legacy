  install.bin::
  	@if [ -d $(BINDIR) ]; then set +x; \
          else (set -x; $(MKDIRHIER) $(BINDIR)); fi
! 	$(INSTALL) -c -m 4755 $(PROGRAM) $(BINDIR)/$(PROGRAM)
  	@echo "install bin . done"
