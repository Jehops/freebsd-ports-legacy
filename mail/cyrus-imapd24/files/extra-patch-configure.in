+	    if test "$ac_cv_header_pcreposix_h" = "yes"; then
 		    AC_MSG_CHECKING(for utf8 enabled pcre)
 		    AC_CACHE_VAL(cyrus_cv_pcre_utf8, AC_TRY_CPP([#include <pcreposix.h>
 #ifndef REG_UTF8
@@ -415,7 +415,7 @@
 	    fi
 	fi
 
