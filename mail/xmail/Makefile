PORTNAME=	xmail
PORTVERSION=	1.6
PORTREVISION=	2
CATEGORIES=	mail
MASTER_SITES=	${MASTER_SITE_XCONTRIB}
MASTER_SITE_SUBDIR=	applications
DISTNAME=	${PORTNAME}_${PORTVERSION}

MAINTAINER=	sjr@comcast.net
COMMENT=	An X-based interface to the Berkeley mail program

USE_IMAKE=	yes
USE_XORG=	xbitmaps xaw
MAN1=		xmail.1

.include <bsd.port.mk>
