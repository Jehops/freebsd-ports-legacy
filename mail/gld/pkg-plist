@unexec if cmp -s %D/etc/gld.conf %D/etc/gld.conf-dist; then rm -f %D/etc/gld.conf; fi
etc/gld.conf-dist
@exec [ -f %B/gld.conf ] || cp %B/%f %B/gld.conf
sbin/gld
