#!/bin/sh

if [ "$2" != "POST-INSTALL" ]
then
	exit 0;
fi

# check if dkfilter user exists
pw user show dkfilter > /dev/null 2>&1

if [ $? != 0 ]
then
	echo "===>  Adding user dkfilter"
	pw useradd dkfilter -c "milter-dk" -s /sbin/nologin \
	-d /nonexistent
else
	echo "===>  Using existing user dkfilter" 
fi
