#!/bin/sh
#
# PROVIDE: spampd
# REQUIRE: LOGIN
# BEFORE: mail
# KEYWORD: shutdown
#
# Add the fellowing line to /etc/rc.conf to enable spampd:
#
# spampd_enable (bool):		Set it to "YES" to enable spampd
#				Default is "NO"
# spampd_flags

. /etc/rc.subr

name="spampd"
rcvar=spampd_enable

: ${spampd_enable="NO"}
: ${spampd_pidfile="/var/run/spamd/spampd.pid"}
: ${spampd_flags="--user=spamd --group=spamd --host 127.0.0.1:10024 --relayhost=127.0.0.1:10025 --dose --tagall --auto-whitelist"}

load_rc_config $name

command="%%PREFIX%%/sbin/$name"
command_args="--pid=${spampd_pidfile}"
pidfile="${spampd_pidfile}"
sig_stop="KILL"
stop_cmd="stop_cmd"
status_cmd="status_cmd"

stop_cmd()
{
	if [ -f "$pidfile" ]; then
		kill `cat $pidfile`
		rm -f $pidfile
		echo -n " spampd"
	fi
}

status_cmd()
{
	if [ -f "$pidfile" ]; then
		echo "${name} is running as pid `cat $pidfile`."
	else
		echo "${name} is not running."
	fi
}

run_rc_command $1
