#!/bin/sh

if [ "$2" != "POST-INSTALL" ]
then
	exit 0;
fi

# check if dkimfilter user exists
pw user show dkimfilter > /dev/null 2>&1

if [ $? != 0 ]
then
	echo "===>  Adding user dkimfilter"
	pw useradd dkimfilter -c "milter-dkim" -s /sbin/nologin \
	-d /nonexistent
else
	echo "===>  Using existing user dkimfilter" 
fi
