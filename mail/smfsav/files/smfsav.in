#!/bin/sh

# PROVIDE: smfsav
# REQUIRE: NETWORKING
# BEFORE: sendmail

# Written for FreeBSD.
#
# $FreeBSD$
#
# Copy this file into /usr/local/etc/rc.d as /usr/local/etc/rc.d/smfsav
# Add this line to /etc/rc.conf:
#
# smfsav_enable="YES"

. /etc/rc.subr

name="smfsav"
rcvar=smfsav_enable
command="%%PREFIX%%/sbin/smfsav"

load_rc_config ${name}
run_rc_command "$1"
