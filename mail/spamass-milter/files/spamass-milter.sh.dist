#!/bin/sh

DAEMON=/usr/local/sbin/spamass-milter
SOCKET=/var/run/spamass-milter.sock

case "$1" in
start)
	if [ -f "${DAEMON}" -a -x "${DAEMON}" ]
	then
		"${DAEMON}" -p "${SOCKET}" -f
		sleep 1
		kill -HUP `head -1 /var/run/sendmail.pid`
		echo -n ' spamass-milter'
	fi
;;
stop)
	killall $(basename ${DAEMON})
	rm -f "${SOCKET}"
	sleep 1
	kill -HUP `head -1 /var/run/sendmail.pid`
	echo -n ' spamass-milter'
;;
esac
