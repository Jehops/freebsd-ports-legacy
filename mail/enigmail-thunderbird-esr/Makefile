PORTVERSION=	1.4
PKGNAMEPREFIX=	${GECKO}-esr-

COMMENT=	A GnuPG extension for the Thunderbird mail client

MASTERDIR=	${.CURDIR}/../enigmail

GECKO=		thunderbird
GECKO_PORTDIR=	mail/${GECKO}-esr
GECKO_EXTDIR=	comm-esr10

PORTSCOUT=	ignore:1

.include "${MASTERDIR}/Makefile"
