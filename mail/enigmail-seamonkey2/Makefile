PORTVERSION=	1.0.1
PORTREVISION=	1

COMMENT=	A GnuPG extension for the Seamonkey mail client

MASTERDIR=	${.CURDIR}/../enigmail

GECKO=		seamonkey2
GECKO_PORTDIR=	www/${GECKO}
GECKO_EXTDIR=	comm-1.9.1

PORTSCOUT=	ignore:1

.include "${MASTERDIR}/Makefile"
