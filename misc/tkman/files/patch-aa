  	$(CP) tkman $(BINDIR)
  	chmod +x $(BINDIR)/tkman
  	$(CP) tkman.1 $(MANDIR)
! 	@echo 'You also need RosettaMan to run TkMan.'
  
  test: dox tkman
  	cp tkman $(BINDIR)
