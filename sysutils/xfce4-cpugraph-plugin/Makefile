PORTNAME=	xfce4-cpugraph-plugin
PORTVERSION=	0.2.2
PORTREVISION=	5
CATEGORIES=	sysutils xfce
MASTER_SITES=	${MASTER_SITE_BERLIOS}
MASTER_SITE_SUBDIR=	xfce-goodies
DIST_SUBDIR=	xfce4

