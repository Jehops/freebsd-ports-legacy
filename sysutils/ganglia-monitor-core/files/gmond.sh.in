#!/bin/sh
# $FreeBSD$

# PROVIDE: gmond
# REQUIRE: DAEMON
# KEYWORD: shutdown


. %%RC_SUBR%%

name=gmond
rcvar=`set_rcvar`
command="%%PREFIX%%/sbin/${name}"

load_rc_config ganglia

load_rc_config $name

gmond_enable=${gmond_enable-NO}
gmond_conf=${gmond_conf-%%PREFIX%%/etc/gmond.conf}

command_args="-c ${gmond_conf}"
required_files=${gmond_conf}

run_rc_command $*
