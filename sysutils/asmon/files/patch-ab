+ LIBDIR = -L${X11BASE}/lib
+ LIBS   = -lXpm -lXext -lX11 -lkvm
+ OBJS =  asmon/asmon.o \
+ 		wmgeneral/wmgeneral.o \
+ 		wmgeneral/misc.o \
+ 		wmgeneral/list.o
+ 
+ all: asmon
+ 
+ .c.o:
+ 	$(CC) $(CFLAGS) -c -Wall -I${X11BASE}/include $< -o $*.o
+ 
+ asmon: $(OBJS)
+ 	$(CC) -o asmon/asmon $^ $(LIBDIR) $(LIBS)
+ 
+ clean::
+ 	for i in $(OBJS) ; do \
+ 		rm -f $$i;\
+ 	done
