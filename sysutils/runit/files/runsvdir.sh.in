#!/bin/sh
DAEMON=runsvdir
PREFIX=%%PREFIX%%
SVDIR=%%SERVICE_DIR%%
LOG='...........................................................................................................................................................................................................................................................................................................................................................................................................'

PATH=/command:${PREFIX}/sbin:${PREFIX}/bin:/usr/sbin:/usr/bin:/sbin:/bin

case "$1" in
  start)
	echo -n " ${DAEMON}"
	exec env - PATH=${PATH} ${PREFIX}/sbin/${DAEMON} $SVDIR $LOG & 
	;;

  stop)
	echo -n " ${DAEMON}"
	/usr/bin/killall -HUP ${DAEMON}
	;;

  *)
  	echo "Usage: $0 start | stop"
	;;
esac
