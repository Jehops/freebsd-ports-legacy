  	if test -f $$d/screen.info; then \
  	for f in $$d/screen.info*; do $(INSTALL_DATA) $$f $(infodir);done; \
  	if $(SHELL) -c 'install-info --version' >/dev/null 2>&1; then \
! 	  install-info --infodir=$(infodir) $$d/screen.info; \
  	else true; fi; \
  	fi
  
