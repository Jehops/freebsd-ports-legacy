#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: ffserver-head
# REQUIRE: NETWORKING
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable ffserver:
#
#ffserver2_enable="YES"
#
ffserver2_enable="${ffserver2_enable-NO}"

. /etc/rc.subr

name=ffserver2
rcvar=ffserver2_enable

command="%%PREFIX%%/bin/${name} &"
required_files=%%PREFIX%%/etc/ffserver2.conf

load_rc_config ${name}
run_rc_command "$1"
