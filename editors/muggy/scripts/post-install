#!/bin/sh

installdir=${PREFIX}/JDE/Muggy; export installdir

case ${LANGUAGE} in
    Japanese)
	for f in Muggy.app; do
	    ${REINPLACE_CMD} -i "" -E -e \
		"s/^(exec[[:space:]]+)wishstep[[:space:]]*([[:space:]]+.*)\$/\1wishstep${VERSION}jp\2/" \
		${installdir}/bin/${f}
	done
    ;;
    *)
    ;;
esac
for f in Muggy Muggy.app; do
    case ${f} in
	Muggy.app|PrefMuggy.app)
	    target=${installdir}/bin/${f}
	;;
	Muggy)
	    target=${installdir}/defaults/${f}
	;;
    esac
    ${REINPLACE_CMD} -i "" -E -e \
        "s@^([[:space:]]*set[[:space:]]+Jlib[[:space:]]+)\"[^\"]*\"\$@\1\"${installdir}/\"@" \
	${target}
done

${LN} -sf ${installdir}/bin/Muggy.app ${PREFIX}/bin
