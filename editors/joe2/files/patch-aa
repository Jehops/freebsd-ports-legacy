  	ln $(WHEREJOE)/joe $(WHEREJOE)/jmacs
  	ln $(WHEREJOE)/joe $(WHEREJOE)/jstar
  	ln $(WHEREJOE)/joe $(WHEREJOE)/rjoe
  	ln $(WHEREJOE)/joe $(WHEREJOE)/jpico
! 	mv termidx $(WHEREJOE)
