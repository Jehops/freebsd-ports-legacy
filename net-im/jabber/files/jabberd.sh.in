#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: jabber
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf to enable rsyncd:
#
# jabber_enable="YES"
#

. %%RC_SUBR%%

name="jabber"
rcvar=`set_rcvar`

load_rc_config $name

required_files=%%PREFIX%%/etc/${name}.xml

: ${jabber_enable="NO"}
: ${jabber_pidfile="/var/run/jabberd/${name}.pid"}
: ${jabber_flags="-B -h `/bin/hostname` -c ${required_files}"}
: ${jabber_user="jabber"}
: ${jabber_group="jabber"}

pidfile=${jabber_pidfile}
command="%%PREFIX%%/bin/jabberd"

run_rc_command "$1"
