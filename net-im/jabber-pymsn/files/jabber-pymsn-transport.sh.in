#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: jabber_pymsn
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown
#
# Define these jabber_pymsn_* variables in one of these files:
#       /etc/rc.conf
#       /etc/rc.conf.local
#

. %%RC_SUBR%%

name="jabber_pymsn"
rcvar=`set_rcvar`

load_rc_config $name

: ${jabber_pymsn_enable="NO"}
: ${jabber_pymsn_dir="%%PREFIX%%/lib/jabber/pymsn"}
: ${jabber_pymsn_piddir="/var/jabberd/pid"}
: ${jabber_pymsn_user="jabber"}

pidfile="${jabber_pymsn_piddir}/PyMSNt.pid"
command_interpreter="%%PYTHON_CMD%%"
command_args="-p ${pidfile}"
command="${jabber_pymsn_dir}/PyMSNt.py"

run_rc_command "$1"
