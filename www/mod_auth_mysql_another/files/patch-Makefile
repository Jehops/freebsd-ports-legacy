+APXS      = apxs
+APXSFLAGS =
+DSO   = mod_auth_mysql.so
+SRCS  = mod_auth_mysql.c
+OPTS  = -I%%PREFIX%%/include -L%%PREFIX%%/lib/mysql -lmysqlclient
+
+all: $(DSO)
+
+$(DSO): $(SRCS)
+	$(APXS) $(APXSFLAGS) -o $(DSO) $(OPTS) -c $(SRCS) -rpath %%PREFIX%%/lib/mysql
+
+install: $(DSO)
+	$(APXS) $(APXSFLAGS) $(NAME) -i -A $(DSO)
+
+clean:
+	-rm -f *.o $(DSO)
+
