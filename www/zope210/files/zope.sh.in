#!/bin/sh

case "$1" in
start)
	umask 077
	nohup %%ZOPEBASEDIR%%/start \
	       -w %%ZOPE_HTTP_PORT%% \
	       -f %%ZOPE_FTP_PORT%% \
	       -m %%ZOPE_MONITOR_PORT%% \
	       -u %%ZOPE_USER%% \
	       -p %%CGIBINDIR%%/Zope.cgi \
	    >> %%ZOPEBASEDIR%%/var/zope-output 2>&1 &
	echo -n " Zope"
	;;
stop)
	%%ZOPEBASEDIR%%/stop
	echo -n " Zope"
	;;
*)
	echo "Usage: `basename $0` {start|stop}" >&2
	;;
esac

exit 0
