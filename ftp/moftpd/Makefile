PORTNAME=	moftpd
PORTVERSION=	1.1.6
CATEGORIES=	ftp ipv6
MASTER_SITES=	ftp://ftp.morth.org/moftpd/

MAINTAINER=	ports@FreeBSD.org
COMMENT=	A powerful FTP server supporting IPv6, TLS, and much more

GNU_CONFIGURE=	yes
USE_OPENSSL=	yes
USE_GMAKE=	yes

MAN8=		moftpd.8

.include <bsd.port.mk>
