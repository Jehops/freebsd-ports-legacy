#!/bin/sh
#
# $FreeBSD$
#

PATH=/usr/sbin:/usr/bin:/bin ; export PATH

case $2 in
    PRE-INSTALL)
    ;;

    POST-INSTALL)
        if [ -z "${PACKAGE_BUILDING}" ]; then
            # Copy over sample config files unless they already exist

            for cf in `ls %%MNEMODIR%%/config/*.dist | sed -e 's/\.dist//g'`; do
                if [ ! -f $cf ]; then
                    cp -p $cf.dist $cf
                fi
            done
        fi
    ;;
esac
