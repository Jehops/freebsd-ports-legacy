#!/bin/sh
#

# PROVIDE: musicpd
# REQUIRE: LOGIN
# KEYWORD: shutdown

# Add the following line to /etc/rc.conf to enable mpd:
#
#musicpd_enable="YES"

. %%RC_SUBR%%

name=musicpd
rcvar=`set_rcvar`

config=%%PREFIX%%/etc/mpd.conf
command=%%PREFIX%%/bin/mpd
required_files=$config

load_rc_config $name

: ${musicpd_enable="NO"}

command_args="$config"

run_rc_command "$1"
