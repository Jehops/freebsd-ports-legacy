  void
  SmartMemory::free(void* ptr, unsigned size) {
  	if(ptr) {
+ #ifdef __FreeBSD__
+ 		::free(ptr);
+ #else
  		::cfree(ptr);
+ #endif
  		totalBytes_Allocated -= size;
  	}
  }
