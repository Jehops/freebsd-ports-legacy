! CFLAGS = -O2 -Wall
  CC = cc
  RM = rm -f
  
  all:: wmrecord
  
  wmrecord: wmrecord.o wmgeneral.o
! 	$(CC) -o $@ wmrecord.o wmgeneral.o $(LIBDIR) $(LIBS)
  
