- ifeq (.depend, $(wildcard .depend))
- .depend depend dep: playmidi.h
- 	for i in *.c; do $(CPP) -M $(CFLAGS) $(INCLUDES) $$i; done >.depend
- 
- include .depend
- else
- depend dep:
- 	for i in *.c; do $(CPP) -M $(CFLAGS) $(INCLUDES) $$i; done >.depend
- 
- .depend: playmidi.h
- 	@echo
- 	@echo "Bad or missing .depend running 'make depend clean'"
- 	@echo
- 	$(MAKE) depend clean
- 	@echo
- 	@echo "Successful.  Trying to make again"
- 	@exit 0
