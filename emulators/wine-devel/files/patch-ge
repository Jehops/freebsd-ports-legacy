  # Rules for .so files
  
  lib$(MODULE).so: $(ALL_OBJS) Makefile.in
! 	$(LDSHARED) $(LDDLLFLAGS) $(ALL_OBJS) -o $@ -L$(DLLDIR) $(IMPORTS:%=-l%) $(ALL_LIBS)
  
  $(ALTNAMES:%=lib%.$(LIBEXT)): lib$(MODULE).$(LIBEXT)
  	$(RM) $@ && $(LN_S) lib$(MODULE).$(LIBEXT) $@
