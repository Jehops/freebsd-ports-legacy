  # Build modules from source:
  main.o: main.c apple.h
! 	cc -c  $(OPT) main.c
  6502.o: 6502.c apple.h
! 	cc -c  $(OPT) 6502.c
  mega2.o: mega2.c apple.h
! 	cc -c  $(OPT) mega2.c
  debug.o: debug.c apple.h
! 	cc -c  $(OPT) debug.c
  prodos.o: prodos.c apple.h
! 	cc -c  $(OPT) prodos.c
  
  # Build the executale
  prodos  : $(OBJ)
! 	cc $(OPT) -o prodos $(OBJ) $(LIB)
  
  # Clean up
  clean:
! 	rm *.o *~
