OBJ	  =	main.o server.o screen.o tree.o multipart.o grouplist.o \
		findfile.o parsecfgfile.o
CXX	 ?=	g++
CXXFLAGS ?=	-O6
CXXFLAGS +=	-DFREEBSD
LIBS	  =	-lncurses
PREFIX	 ?=	/usr/local
DEST	  =	$(PREFIX)/bin
INSTALL	 ?=	install

bgrab: $(OBJ) Makefile common.h
	$(CXX) $(LIBS) -o bgrab $(OBJ)

clean:
	rm -f $(OBJ) bgrab 

install: bgrab
	$(INSTALL) bgrab $(DEST)/bgrab

all: bgrab
