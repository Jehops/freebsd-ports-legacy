#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: newscache
# REQUIRE: DAEMON
# KEYWORD: FreeBSD
#
# Add the following line to /etc/rc.conf to enable newscache:
#
# newscache_enable="YES"
#
newscache_enable=${newscache_enable-"NO"}
newscache_flags=${newscache_flags-""}

. %%RC_SUBR%%

name=newscache
rcvar=`set_rcvar`

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid
sig_stop=-KILL

load_rc_config ${name}
run_rc_command "$1"
