PORTNAME=	Class-Std
DISTVERSIONPREFIX=	v
DISTVERSION=	0.0.8
PORTREVISION=	1
CATEGORIES=	devel perl5
MASTER_SITES=	CPAN
PKGNAMEPREFIX=	p5-

MAINTAINER=	infofarmer@FreeBSD.org
COMMENT=	Support for creating standard "inside-out" classes

