--- config/Make.rules.orig	Wed Aug 22 16:32:59 2007
+++ config/Make.rules	Wed Aug 22 21:34:34 2007
@@ -7,6 +7,8 @@
 #
 # **********************************************************************
 
+ICE_HOME		= %%LOCALBASE%%
+
 ifndef ICE_HOME
    ifneq ($(shell test -f /usr/include/Ice/Ice.h && echo 0),0)
       $(error Ice installation not found, please set ICE_HOME!)
@@ -18,7 +20,7 @@ endif
