PORTNAME=	spread
PORTVERSION=	2.1.0
PORTREVISION=	2
CATEGORIES=	devel pear
MASTER_SITES=	http://pecl.php.net/get/
PKGNAMEPREFIX=	pecl-
DIST_SUBDIR=	PECL

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Php Interface to the Spread Toolkit API

LICENSE=	PHP301

BUILD_DEPENDS=	${LOCALBASE}/include/sp.h:${PORTSDIR}/net/spread4
RUN_DEPENDS=	${LOCALBASE}/include/sp.h:${PORTSDIR}/net/spread4

USES=		tar:tgz
USE_PHP=	yes
USE_PHPEXT=	yes
DEFAULT_VERSIONS+=	php=53

CONFIGURE_ARGS+=	--with-spread=${LOCALBASE}

post-install:
	@${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/php/${PHP_EXT_DIR}/${PHP_MODNAME}.so

.include <bsd.port.mk>
