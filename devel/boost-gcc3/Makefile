COMMENT=	Free portable C++ source libraries (built with GCC 3.4+)

MASTERDIR=	${.CURDIR}/../../devel/boost
PKGDIR=		${.CURDIR}
PLIST=		${MASTERDIR}/pkg-plist

WITH_PYTHON=		yes
WITH_THREADS=		yes
WITHOUT_ICU=		yes
WITH_OPTIMIZED_CFLAGS=	yes
WITH_GCC34=		yes
WITHOUT_VERBOSE_BUILD=	yes
WITHOUT_DEBUG=		yes

BOOST_GCC3_PORT=	yes

.include "${MASTERDIR}/Makefile"
