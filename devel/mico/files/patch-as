 #else // neither _WIN32 nor _POCKET_PC
+#ifndef fpclassify
+#define	fpclassify(x) \
+    ((sizeof (x) == sizeof (float)) ? __fpclassifyf(x) \
+    : (sizeof (x) == sizeof (double)) ? __fpclassifyd(x) \
+    : __fpclassifyl(x))
+#endif
+#ifndef isinf
+#define	isinf(x)	(fpclassify(x) == FP_INFINITE)
+#endif
+#ifndef isnan
+#define	isnan(x)	(fpclassify(x) == FP_NAN)
+#endif
 
