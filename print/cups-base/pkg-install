#!/bin/sh
PATH=/bin:/usr/sbin

REPLACES_BINARIES="/usr/bin/lpr
					/usr/bin/lp
					/usr/bin/lpq
					/usr/bin/lprm
					/usr/bin/lpstat
					/usr/sbin/lpc"

case $2 in
POST-INSTALL)
	# Unshade binaries
	if [ "${3}" = "overwrite" ]; then
		for FILE in ${REPLACES_BINARIES}; do
			[ -e "${FILE}" ] && chmod -h 0 "${FILE}"
		done
	fi
	;;
esac
