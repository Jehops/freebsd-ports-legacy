#!/bin/sh
# $FreeBSD$

MODE=%%MODE%%
TETEX_MODESW=%%TETEX_MODESW%%

case $2 in
POST-INSTALL)
	case ${MODE} in
	tetex)	;;
	*)	${TETEX_MODESW} changedefault ${MODE} ;;
	esac

	${TETEX_MODESW} default dvips  forceinstall
	${TETEX_MODESW} default dvipdfm forceinstall
	${TETEX_MODESW} default xdvi forceinstall
	;;
DEINSTALL)
	;;
esac
