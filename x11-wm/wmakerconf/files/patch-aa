 #! /usr/bin/perl
 quit ("Wget not installed") if $wwwget eq "";
 
-$rc = system ("$wwwget --quiet -c --tries=0 -O$tmpfile '$url'");
+$rc = system ("$wwwget --q -o $tmpfile '$url'");
 
 quit ("HTTP response error.") if $rc;
