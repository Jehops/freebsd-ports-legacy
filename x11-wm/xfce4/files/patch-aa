  	@if [ -d $(FVWM_MODULES) ]; then \
! 	ln -svf $(XBINDIR)/XFCE $(FVWM_MODULES); fi
  	@if [ -d $(FVWM2_MODULES) ]; then \
! 	ln -svf $(XBINDIR)/XFCE $(FVWM2_MODULES); fi
  	mkdir -p $(XFCE_DIR)
  	mkdir -p $(XFCE_DIR)/doc
! 	@cp -vpb sample.* $(XFCE_DIR)/;
