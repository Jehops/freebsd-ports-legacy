! 	cp -vpb palettes\/* $(XFCE_PAL)
  
  install_bin::   	XFCE install.man
  	@if [ -d $(XBINDIR) ]; then set +x; \
  	else (set -x; $(MKDIRHIER) $(XBINDIR)); fi
! 	@cp -vfb XFCE $(XBINDIR);
! 	ln -svf $(XBINDIR)/XFCE $(XBINDIR)/xfce;
