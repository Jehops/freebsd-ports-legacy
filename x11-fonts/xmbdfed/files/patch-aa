+ 	${INSTALL} ${COPY} -o ${MANOWN} -g ${MANGRP} -m ${MANMODE} \
+ 		xmbdfed.man ${X11BASE}/man/man1/xmbdfed.1
  
  xmbdfed: $(OBJS)
  	$(PURIFY) $(CC) $(STATIC) $(CFLAGS) -o xmbdfed $(OBJS) $(LIBS)
