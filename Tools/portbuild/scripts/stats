#!/bin/sh

if [ $# -ne 1 ]; then
	echo "usage: <branch>"
	exit 1
fi

branch=$1

for i in i386 sparc64 amd64; do
	if [ -d /var/portbuild/$i/${branch}/builds/latest/packages/All ]; then
		count=$(find /var/portbuild/$i/${branch}/builds/latest/packages/All -name \*.tbz -o -name \*.tgz |wc -l)
		echo -n "$i: ${count}  "
	fi
done
echo
