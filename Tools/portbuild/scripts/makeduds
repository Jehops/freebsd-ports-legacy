#!/bin/sh
# usage: $0 arch branch

# configurable variables
pb=/var/portbuild
arch=$1
shift

. ${pb}/${arch}/portbuild.conf

. ${pb}/scripts/buildenv

# -j# to make duds
DUDSJOBS=4

usage () {
  echo "usage: makeduds branch"
  exit 1
}
if [ $# != 1 ]; then
  usage
fi

branch=$1

buildenv ${pb} ${arch} ${branch}

duds=${pb}/${arch}/${branch}/duds

unset DISPLAY

export PACKAGE_BUILDING=1
cd ${PORTSDIR}
make -j${DUDSJOBS} ignorelist ECHO_MSG=true > ${duds} || exit 1
sort ${duds} > ${duds}.tmp
mv -f ${duds}.tmp ${duds}
