LICENSE=	LGPL21 MPL
LICENSE_COMB=	multi

USE_BZIP2=	yes
USES=		cmake:outsource
CMAKE_ENV+=	PKG_CONFIG_LIBDIR="${PREFIX}/libdata"
NO_BUILD=	yes

LATEST_LINK=	${PORTNAME}3

WRKSRC=		${WRKDIR}/${PORTNAME}-${PORTNAME}-2249f9c22fe8

.include <bsd.port.mk>
