WRKSRC_SUBDIR=		linux64

post-extract:
	@${RM} ${WRKSRC}/makefile
	@${MV} ${WRKSRC}/makebsd ${WRKSRC}/Makefile

pre-build:
	@${REINPLACE_CMD} -e 's|-ldl||g ; \
			s|-lstdc++||g ; \
			s|gcc|${CC}|g ; \
			s|cc|${CC}| ; \
			s|-malign-double||' \
				${WRKSRC}/Makefile
	@(cd ${WRKSRC}/../gwnum/ && ${MAKE} -f makebsd64)
