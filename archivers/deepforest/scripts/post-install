#!/bin/sh

case ${LANGUAGE} in
    Japanese)
	for f in DeepForest.app; do
	    ${REINPLACE_CMD} -E -e \
	    	"s/^(exec[[:space:]]+)wishstep[^[:space:]]*([[:space:]]+.*)\$/\1wishstep${VERSION}jp\2/" \
		${PREFIX}/JDE/DeepForest/${f}
	done
    ;;
    *)
    ;;
esac

${LN} -sf ${PREFIX}/JDE/DeepForest/DeepForest.app ${PREFIX}/bin
