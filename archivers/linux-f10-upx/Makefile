USE_LINUX_RPM=		yes
RPMVERSION=		4
LINUX_DIST_VER=		4
BRANDELF_FILES=		usr/bin/upx
MASTER_SITE_SRC_SUBDIR=	../extras/${LINUX_DIST_VER}/SRPMS
DESCR=			${.CURDIR}/../${PORTNAME}/pkg-descr

