#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: maradns
# REQUIRE: SERVERS
# BEFORE: DAEMON
# KEYWORD: shutdown
#

. /etc/rc.subr

: ${maradns_enable="NO"}
: ${maradns_conf="%%PREFIX%%/etc/mararc"}

name="maradns"
rcvar=maradns_enable
command="%%PREFIX%%/bin/duende"
command_args="%%PREFIX%%/sbin/maradns -f ${maradns_conf}"
pidfile="/var/run/${name}.pid"

load_rc_config $name

run_rc_command "$1"
