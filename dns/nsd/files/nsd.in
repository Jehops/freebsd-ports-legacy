#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: nsd
# REQUIRE: DAEMON
#
# Add the following line to /etc/rc.conf to enable nsd:
#
# nsd_enable="YES"
#

. %%RC_SUBR%%

name=nsd
rcvar=`set_rcvar`

required_files=%%PREFIX%%/etc/nsd/nsd.conf

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid

load_rc_config ${name}

nsd_enable=${nsd_enable-"NO"}

run_rc_command "$1"

