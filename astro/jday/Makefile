COMMENT=	Astronomical julian date calculator

GNU_CONFIGURE=	yes
CONFIGURE_TARGET=	--build=${MACHINE_ARCH}-portbld-freebsd${OSREL}

MAN1=	jday.1

.include <bsd.port.mk>
