+	$(MAKE_CMD) $(MFLAGS) includes
+	$(MAKE_CMD) $(MFLAGS) depend
+	$(MAKE_CMD) $(MFLAGS) $(WORLDOPTS) $@
+	@echo ""
+	@date
+	@echo ""
+	@echo build of X Window System: $@ distribution complete.
+	@echo ""
