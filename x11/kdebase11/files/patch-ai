! xhost +local:root
  echo ""
  echo "Logging in as super user"
! su - -c "export DISPLAY=$DISPLAY; @kde_bindir@/kfm -sw >/dev/null"
! xhost -local:root
  
--- 2,10 ----
  echo "--------------"
  echo ""
! echo "Allowing ALL (!) local users to use this display"
! xhost +local:
  echo ""
  echo "Logging in as super user"
! su root -c "echo DISPLAY=$DISPLAY @kde_bindir@/kfm -sw | /bin/sh > /dev/null"
! xhost -local:
  
