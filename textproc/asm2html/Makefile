PORTNAME=	asm2html
PORTVERSION=	1.4
CATEGORIES=	textproc
MASTER_SITES=	http://virtus.ath.cx/asm2html/

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Converts NASM syntax assembly code to HTML code

MAN1=		asm2html.1
PLIST_FILES=	bin/asm2html
HAS_CONFIGURE=	yes
CONFIGURE_ARGS+=--prefix=${PREFIX}

.include <bsd.port.mk>
