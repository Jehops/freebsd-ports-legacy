#! /bin/sh
# $FreeBSD#

PATH=/bin:/usr/bin:/usr/sbin

case $2 in

POST-INSTALL)
	DIR=/var/log/pootle
	if [ -d ${DIR} ]; then
	  echo "===> Skipping ${DIR} - already exists"
	else
  	  echo "===> Creating directory ${DIR}"
  	  mkdir -p ${DIR}
  	  echo "===> Changing ownership of ${DIR}"
  	  chown -R nobody:nobody ${DIR}
  	  echo "===> Changing permissions of ${DIR}"
  	  chmod -R 770 ${DIR}
	fi
	DIR="/var/db/pootle"
	if [ -d ${DIR} ]; then
	  echo "===> Skipping ${DIR} - already exists"
	else
  	  echo "===> Changing ownership of ${DIR}"
  	  chown -R nobody:nobody ${DIR}
  	  echo "===> Changing permissions of ${DIR}"
  	  chmod -R 770 ${DIR}
	fi
	;;
esac
