 inline void reset_floating_point_exceptions()
 {
   /* Don't fall for overflow, underflow,divide-by-zero or loss of precision */
+#if defined(__i386__)
   fpsetmask(~(FP_X_INV | FP_X_DNML | FP_X_OFL | FP_X_UFL |
+#else
+  fpsetmask(~(FP_X_INV | FP_X_OFL | FP_X_UFL |
+#endif
 	      FP_X_DZ | FP_X_IMP));
 }
