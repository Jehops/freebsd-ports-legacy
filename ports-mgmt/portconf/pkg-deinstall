#!/bin/sh

MAKE_CONF=/etc/make.conf

if [ "$2" = "POST-DEINSTALL" ]; then
echo -n "Cleaning up ${MAKE_CONF}..."
if [ -f ${MAKE_CONF} ]; then
    sed -i"" -e "/# Begin portconf settings/,/# End portconf settings/d" \
	${MAKE_CONF}
    if [ ! -s ${MAKE_CONF} ]; then
	rm ${MAKE_CONF}
    fi
fi
echo " Done."
fi
