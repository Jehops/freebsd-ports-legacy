trap trap_exit 2
PKG=$@

trap_exit()
{
	echo -e "\n*** SIGINT ***"
	exit 1
}

root()
{
	if [ `id -u` != 0 ]; then
		echo "bpkg: access denied, root privileges required"
		exit 1
	fi
}

