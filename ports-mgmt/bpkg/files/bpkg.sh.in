while getopts b:D:d:e:F:f:g:I:i:j:k:L:M:m:O:o:p:Q:q:r:S:s:w:z:CchltvZ opts; do
	case $opts in
		b) PKG=$OPTARG
		   pkg_backup;;
		D) PKG=$OPTARG
		   pkg_distinfo;;
		d) PKG=$OPTARG
		   pkg_info-x;;
		e) PKG=$OPTARG
		   make_config;;
