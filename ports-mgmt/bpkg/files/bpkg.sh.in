		   pkg_freshports;;
		f) PKG=$OPTARG
		   pkg_info-xf;;
		g) PKG=$OPTARG
		   pkg_info-xg;;
		I) PKG=$OPTARG
		   pkg_info-xI;;
		i) PKG=$OPTARG
		   make_search;;
		j) PKG=$OPTARG
		   make_search_info;;
		k) PKG=$OPTARG
		   pkg_info-xk;;
		L) PKG=$OPTARG
		   pkg_info-xL;;
		M) PKG=$OPTARG
		   pkg_info-xD;;
		m) PKG=$OPTARG
		   pkg_makefile;;
		O) PKG=$OPTARG
		   make_rmc;;
		o) PKG=$OPTARG
		   make_showc;;
		p) PKG=$OPTARG
		   pkg_path;;
		Q) PKG=$OPTARG
		   pkg_latestftp;;
		q) PKG=$OPTARG
		   pkg_ftp;;
		r) PKG=$OPTARG
		   pkg_info-xr;;
		S) PKG=$OPTARG
		   make_search_S;;
		s) PKG=$OPTARG
		   pkg_info-xs;;
		w) PKG=$OPTARG
