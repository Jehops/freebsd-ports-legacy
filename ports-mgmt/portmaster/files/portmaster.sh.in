	[ -n "$VERBOSE" ] && echo "===>>> Build canceled due to -n flag"
	safe_exit
fi

[ -z "$DONT_PRE_CLEAN" ] && {
	pm_make clean NOCLEANDEPENDS=yes || fail 'make clean failed'; echo ''; }

sleep=3
fl_read=`echo ${TMPDIR}/f-${PARENT_PID}-fetchlog-${portdir#*/}.*`
while [ -f "$fl_read" ]; do
	echo "===>>> Waiting on fetch & checksum for $portdir <<<==="
	tail -10 $fl_read 2>/dev/null
	echo '' ; echo ''
	sleep $sleep

	if [ $sleep -eq 10 ]; then
		sleep=3
	else
		sleep=$(( $sleep + 1 ))
	fi
done
unset sleep

if [ -n "$HIDE_BUILD" ]; then
	port_log=`mktemp -t port_log-${PARENT_PID}-${portdir#*/}`
