#!/bin/sh
# $FreeBSD$
#
# PROVIDE: ircservices
# REQUIRE: LOGIN
# KEYWORDS: nojail shutdown

. %%RC_SUBR%%

name=ircservices
rcvar=${name}_enable

command="%%PREFIX%%/sbin/${name}"
pidfile="%%PREFIX%%/lib/services/${name}.pid"
required_files="%%PREFIX%%/lib/services/ircservices.conf \
		%%PREFIX%%/lib/services/modules.conf"

load_rc_config ${name}

: ${ircservices_enable="NO"}

run_rc_command "$1"
