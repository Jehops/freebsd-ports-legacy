#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: bitlbee
# REQUIRE: LOGIN
# KEYWORD: shutdown

# Add the following lines to /etc/rc.conf to enable bitlbee:
# bitlbee_enable="YES"
# bitlbee_flags="<set as needed>"

. /etc/rc.subr

name="bitlbee"
rcvar=`set_rcvar`

load_rc_config $name

: ${bitlbee_enable="NO"}
: ${bitlbee_user="%%BITLBEEUSER%%"}
: ${bitlbee_config="%%PREFIX%%/etc/bitlbee/bitlbee.conf"}

required_files="${bitlbee_config}"
command="%%PREFIX%%/sbin/bitlbee"
command_args="-D -u ${bitlbee_user} -c ${bitlbee_config} ${bitlbee_flags}"

run_rc_command "$1"
