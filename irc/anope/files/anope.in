#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: anope
# REQUIRE: LOGIN mysql
# KEYWORD: shutdown

#
# Add the following line to /etc/rc.conf to enable anope:
# anope_enable=YES
#

. /etc/rc.subr

name=anope
rcvar=anope_enable

load_rc_config $name

command=%%PREFIX%%/anope/bin/services

anope_enable=${anope_enable:-"NO"}
anope_user:=nobody
pidfile=%%PREFIX%%/anope/data/services.pid

run_rc_command "$1"
