+								$c['comment'] = io_safe_output($c['comment']);
+								$c['comment'] = str_replace("\n", "<br>", $c['comment']);
+								$comment .= '<br>' . $c['comment'] . '<br>';
+							}
+						}
+
+						$event["comments"] = $comment;
 						
 						echo json_encode(array('correct' => 1, 'event' => $event));
 					}
