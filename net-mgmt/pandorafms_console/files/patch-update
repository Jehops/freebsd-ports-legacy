+function get_cookie($name, $default = '') {
+	if (isset($_COOKIE[$name])) {
+		return $_COOKIE[$name];
+	}
+	else {
+		return $default;
+	}
+}
+
+function set_cookie($name, $value) {
+	if (is_null($value)) {
+		unset($_COOKIE[$value]);
+		setcookie($value, null, -1, '/');
+	}
+	setcookie($name, $value);
+}
