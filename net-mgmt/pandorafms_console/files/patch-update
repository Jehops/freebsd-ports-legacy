+function postgresql_encapsule_fields_with_same_name_to_instructions($field) {
+	$return = $field;
+	
+	if (is_string($return)) {
+		if ($return[0] !== '"') {
+			$return = '"' . $return . '"';
+		}
+	}
+	
+	return $return;
+}
