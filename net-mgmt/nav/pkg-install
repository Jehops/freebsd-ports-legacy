#! /bin/sh

case "$2" in
PRE-INSTALL)
	set -e
	if ! pw groupshow nav >/dev/null 2>&1 ; then
		pw groupadd nav -g 127
	fi
	if ! pw usershow navcron >/dev/null 2>&1 ; then
		pw useradd navcron -u 127 -g nav -h - \
		    -d ${PKG_PREFIX}/nav -s /sbin/nologin \
		    -c 'Network Administration Visualized'
	fi
	;;
DEINSTALL)
	pw userdel navcron
	pw groupdel nav
	;;
esac
