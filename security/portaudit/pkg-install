#!/bin/sh
#
# $FreeBSD$
#

ECHO_CMD=echo

case $2 in
POST-INSTALL)
  if [ ! -f "%%DATABASEDIR%%/auditfile.tbz" ]; then
    ${ECHO_CMD}
    ${ECHO_CMD} "===>  To check your installed ports for known vulnerabilities now do:"
    ${ECHO_CMD}
    ${ECHO_CMD} "      %%PREFIX%%/bin/portaudit -F -a"
    ${ECHO_CMD}
  fi
  ;;
esac
