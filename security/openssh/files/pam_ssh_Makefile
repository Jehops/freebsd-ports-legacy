# PAM module for SSH
# $FreeBSD$
.PATH:		${.CURDIR}/..

LIB=		pam_ssh
DESTDIR=
SHLIB_NAME=	pam_ssh.so
SRCS=		log-client.c pam_ssh.c
CFLAGS+=	-Wall
DPADD+=		${LIBCRYPTO} ${LIBDES} ${LIBUTIL} ${LIBZ} ${LIBGCC_PIC}
LDADD+=		${CRYPTOLIBS} -lutil -lz -lgcc_pic
INTERNALLIB=	yes
INTERNALSTATICLIB=yes

.include <bsd.lib.mk>
