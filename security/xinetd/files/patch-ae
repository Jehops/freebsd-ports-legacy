+#ifdef __FreeBSD__
+
+#include <stdio.h>
+#include <sys/param.h>
+#include <sys/fcntl.h>
+
+double xgetloadavg ()
+{
+	double ret[3];
+
+	getloadavg (ret, sizeof (ret) / sizeof (ret[0]));
+
+	return ret[0];
+}
+#endif /* __FreeBSD__ */
