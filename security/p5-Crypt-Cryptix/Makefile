PERL_CONFIGURE=	yes

MAN3=		Crypt::DES.3 \
		Crypt::IDEA.3 \
		Crypt::Blowfish.3 \
		Math::PRSG.3 \
		Math::BigInteger.3 \
		Math::TrulyRandom.3

MANPREFIX=	${PREFIX}/lib/perl5/${PERL_VERSION}

.include <bsd.port.mk>
