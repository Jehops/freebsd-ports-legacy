#!/bin/sh
# $FreeBSD$
#

if [ "$2" != "POST-DEINSTALL" ]; then
    exit 0
fi

USER=drweb
ex=0

if pw usershow "${USER}" 2>/dev/null 1>&2; then
	if pw userdel ${USER}; then
		echo "Delete user/group \"${USER}\"."
	else
		echo "Deleting user/group \"${USER}\" failed..."
		ex=1
	fi
fi

[ "$ex" = "1" ] && exit 1
exit 0
